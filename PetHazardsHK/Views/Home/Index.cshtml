@using PetHazardsHK.Models

@{
    ViewData["Title"] = "Pet Hazards in Hong Kong";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowGrid</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!--<link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.2/dist/bootstrap-table.min.css">-->
    <!--
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js" defer></script>

    <script type="text/javascript">
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#demoGrid tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');
            });

            // DataTable
            var table = $('#demoGrid').DataTable({
                responsive: true,

                initComplete: function () {
                    // Apply the search
                    this.api().columns().every(function () {
                        var that = this;

                        $('input', this.footer()).on('keyup change clear', function () {
                            if (that.search() !== this.value) {
                                that
                                    .search(this.value)
                                    .draw();
                            }
                        });
                    });
                }
            });

        });
    </script>

</head>

    <body>
        <div class="text-center">
            <h3 class="display-4">Latest Pet Hazards</h3>
           

            <div class="container">
                <br />
                <div style="width:90%; margin:0 auto;">

                    @model List<Reporting>

                    <table id="demoGrid" class="table table-striped table-bordered dt-responsive" width="10%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date Reported</th>
                                <th>District</th>
                                <th>Area</th>
                                <th>Type</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reporting in Model)
                            {
                                <tr>
                                    <td>@reporting.ReportedDate.ToString("dd MMM yyyy")</td>
                                    <td>@reporting.Area</td>
                                    <td>@reporting.Area</td>
                                    <td>@reporting.HazardType</td>
                                    <td>@reporting.Description</td>
                                </tr>

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Date Reported</th>
                                <th>District</th>
                                <th>Area</th>
                                <th>Type</th>
                                <th>Details</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </body>

</html>
